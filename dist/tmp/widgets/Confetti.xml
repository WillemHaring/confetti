<?xml version="1.0" encoding="utf-8" ?>
<widget id="mendix.confetti.Confetti" pluginWidget="true" needsEntityContext="true" offlineCapable="true"
        supportedPlatform="Web"
        xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Confetti</name>
    <description>The Confetti component is a wrapper that adds a series of confetti blasts as a background to the contents passed in as children.</description>
    <icon></icon>
    <properties>
        
        <!-- Trigger configuration -->
        <propertyGroup caption="Confetti triggering">
            <propertyGroup caption="Trigger">
                <property key="trigger" type="expression" required="false" >
                    <caption>Trigger</caption>
                    <description>An expression that triggers the confetti to explode when changing from false to true</description>
                    <returnType type="Boolean" />
                </property>
                <property key="triggerButton" type="boolean" defaultValue="false">
                    <caption>Trigger with button</caption>
                    <description>Show a button so the confetti gun can be triggered with a button aswell</description>
                </property>
            </propertyGroup>
            <propertyGroup caption="Button settings">
                <property key="TriggerButtonCaption" type="string" defaultValue="Hit me">
                    <caption>Caption</caption>
                    <description>Button caption</description>
                </property>
                <property key="TriggerButtonDelay" type="integer" defaultValue="1000">
                    <caption>Explosion delay</caption>
                    <description>Wait time in ms before the confetti fires</description>
                </property>
                <property key="TriggerButtonDelayMessage" type="string" defaultValue="Loading...">
                    <caption>Delay message</caption>
                    <description>Button caption when the delay is active</description>
                </property>
                <property key="bootstrapStyle" type="enumeration" defaultValue="default">
                    <caption>Button style</caption>
                    <description/>
                    <enumerationValues>
                        <enumerationValue key="default">Default</enumerationValue>
                        <enumerationValue key="inverse">Inverse</enumerationValue>
                        <enumerationValue key="primary">Primary</enumerationValue>
                        <enumerationValue key="info">Info</enumerationValue>
                        <enumerationValue key="success">Success</enumerationValue>
                        <enumerationValue key="warning">Warning</enumerationValue>
                        <enumerationValue key="danger">Danger</enumerationValue>
                    </enumerationValues>
                </property>
                <systemProperty key="Visibility" />
                <property key="onClickEvent" type="action" required="false">
                    <caption>On click</caption>
                    <description>What should happen when the button is pressed?</description>
                </property>
                <systemProperty key="Name" />
                <systemProperty key="TabIndex"/>
        
            </propertyGroup>
        </propertyGroup>

        <!-- Runtime configuration -->
        
        <propertyGroup caption="Runtime Configuration">
            <propertyGroup caption="runtime">
                <property key="useRuntimeSettings" type="boolean" defaultValue="false">
                    <caption>Runtime Settings</caption>
                    <description>Use runtime settings insted of designtime settings</description>
                </property>
            </propertyGroup>
            <propertyGroup caption="Attributes">
                <property key="rt_settings" type="datasource" isList="true" required="false">
                    <caption>Data source</caption>
                    <description />
                </property>
                <property key="rt_angle" type="attribute" required="false" dataSource="rt_settings">
                    <caption>Angle</caption>
                    <description>direction of the explosion in degrees</description>
                    <attributeTypes>
                        <attributeType name="Integer"/>
                    </attributeTypes>
                </property>
                <property key="rt_spread" type="attribute" required="false" dataSource="rt_settings">
                    <caption>Spread</caption>
                    <description>spread of the explosion in degrees</description>
                    <attributeTypes>
                        <attributeType name="Integer"/>
                    </attributeTypes>
                </property>
                <property key="rt_StartVelocity" type="attribute" required="false" dataSource="rt_settings">
                    <caption>Start Velocity</caption>
                    <description>Initial velocity of the particles</description>
                    <attributeTypes>
                        <attributeType name="Integer"/>
                    </attributeTypes>
                </property>
                <property key="rt_width" type="attribute" required="false" dataSource="rt_settings">
                    <caption>Width</caption>
                    <description>Width of the confetti elements</description>
                    <attributeTypes>
                        <attributeType name="Integer"/>
                    </attributeTypes>
                </property>
                <property key="rt_height" type="attribute" required="false" dataSource="rt_settings">
                    <caption>Height</caption>
                    <description>Height of the confetti elements</description>
                    <attributeTypes>
                        <attributeType name="Integer"/>
                    </attributeTypes>
                </property>
                <property key="rt_elementCount" type="attribute" required="false" dataSource="rt_settings">
                    <caption>Element Count</caption>
                    <description>Number of particle elements</description>
                    <attributeTypes>
                        <attributeType name="Integer"/>
                    </attributeTypes>
                </property>
                <property key="rt_dragFriction" type="attribute" required="false" dataSource="rt_settings">
                    <caption>Drag Friction</caption>
                    <description>Decrease in velocity proportional to current velocity</description>
                    <attributeTypes>
                        <attributeType name="Decimal"/>
                    </attributeTypes>
                </property>
                <property key="rt_stagger" type="attribute" required="false" dataSource="rt_settings">
                    <caption>Stagger</caption>
                    <description>Delay for each fetti in milliseconds</description>
                    <attributeTypes>
                        <attributeType name="Integer"/>
                    </attributeTypes>
                </property>
                <property key="rt_duration" type="attribute"  required="false" dataSource="rt_settings">
                    <caption>Duration</caption>
                    <description>Duration of the explosion in ms</description>
                    <attributeTypes>
                        <attributeType name="Integer"/>
                    </attributeTypes>
                </property>
            </propertyGroup>
            <propertyGroup caption="Particle colors">
                <property key="rt_colors" type="datasource" isList="true" required="false">
                    <caption>Data source</caption>
                    <description />
                </property>
                    <property key="rt_color" type="attribute" required="false" dataSource="rt_colors">
                        <caption>Field that holds the colorcode</caption>
                        <description />
                        <attributeTypes>
                            <attributeType name="String"/>
                        </attributeTypes>
                </property>
            </propertyGroup>
        </propertyGroup>
        
        <!-- Designtime configuration -->

        <propertyGroup caption="Designtime Configuration">
            <property key="dt_angle" type="integer" defaultValue="90">
                <caption>Angle</caption>
                <description>direction of the explosion in degrees, defaults to 90</description>
            </property>
            <property key="dt_spread" type="integer" defaultValue="45">
                <caption>Spread</caption>
                <description>spread of the explosion in degrees, defaults to 45.</description>
            </property>
            <property key="dt_startVelocity" type="integer" defaultValue="45">
                <caption>Start Velocity</caption>
                <description>Initial velocity of the particles, defaults to 45.</description>
            </property>
            <property key="dt_width" type="integer" defaultValue="10">
                <caption>Width</caption>
                <description>width of the confetti elements</description>
            </property>
            <property key="dt_height" type="integer" defaultValue="10">
                <caption>Height</caption>
                <description>Height of the confetti elements</description>
            </property>
            <property key="dt_elementCount" type="integer" defaultValue="50">
                <caption>Element Count</caption>
                <description>Number of particle elements, defaults to 50.</description>
            </property>
            <property key="dt_dragFriction" type="decimal" defaultValue="0.1">
                <caption>Drag Friction</caption>
                <description>Decrease in velocity proportional to current velocity, default to 0.1</description>
            </property>
            <property key="dt_stagger" type="integer" defaultValue="0">
                <caption>Stagger</caption>
                <description>Delay for each fetti in milliseconds, defaults to 0.</description>
            </property>
            <property key="dt_duration" type="integer" defaultValue="3000">
                <caption>Duration</caption>
                <description>Duration of the explosion in ms</description>
            </property>
            <property key="dt_colors" type="string" required="false" defaultValue="#a864fd, #29cdff, #78ff44, #ff718d, #fdff6a">
                <caption>Colors for the particals</caption>
                <description>Particle colors sting, should be in the following format: #123123, #456456, #789789 </description>
            </property>
        </propertyGroup>
    </properties>
</widget>
